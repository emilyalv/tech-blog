<div class="row">
  <div class="col-auto">
    <h2>Hello {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Write a post:</h3>

    <form class="form create-post-form">
      <div class="form-group">
        <label for="post-title">Title:</label>
        <input class="form-input" type="text" id="post-name" name="post-name" />
      </div>
      <div class="form-group">
        <label for="post-contents">Body:</label>
        <textarea class="form-input" id="ost-contents" name="ost-contents"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Publish</button>
      </div>
    </form>
  </div>