<!--post details-->
<div class="row mb-4 post">
  <div class="col-md-5">
    <h2>
      {{post.title}}
    </h2>
    <p>
      {{post.contents}}
    </p>
    {{!-- <p>Created by {{post.user.name}} on {{post.date_created}}</p> --}}
    <p>Created on {{post.date_created}}</p>
</div>

<!--comment form-->
<div>
    <form class="form comment-form">
    <div class="form-group">
        <label for="comment-contents">Comment</label>
        <textarea class="form-input" type="text" id="comment-body" name="comment-body" /></textarea>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Post Comment</button>
    </div>
    </form>
</div>

<!--diplay comments-->
<div>
    {{#each comments as |comment| }}
    <p>
      {{comment.contents}}
    </p>
    <p>Created by {{comment.user.name}} on {{comment.date_created}}</p>
    {{/each}}
</div>

    <script src="./js/post.js"></script>